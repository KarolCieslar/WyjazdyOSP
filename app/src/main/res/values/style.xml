<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/NoUpperCaseTabItem</item>
        <item name="tabTextColor">@color/gray</item>
        <item name="tabSelectedTextColor">#EA3737</item>
    </style>

    <style name="NoUpperCaseTabItem" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>