<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.forces.ForcesFragment">


    <!-- STEP 1 -->
    <TextView
        android:id="@+id/stepOne"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/step_current"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stepOneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Opis"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/stepOne"
        app:layout_constraintStart_toStartOf="@id/stepOne"
        app:layout_constraintTop_toBottomOf="@id/stepOne" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/stepLineColor"
        app:layout_constraintBottom_toBottomOf="@id/stepOne"
        app:layout_constraintEnd_toStartOf="@id/stepTwo"
        app:layout_constraintStart_toEndOf="@id/stepOne"
        app:layout_constraintTop_toTopOf="@id/stepOne" />

    <!-- STEP 2 -->
    <TextView
        android:id="@+id/stepTwo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/step_current"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stepTwoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Pojazdy i SprzÄ™t"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/stepTwo"
        app:layout_constraintStart_toStartOf="@id/stepTwo"
        app:layout_constraintTop_toBottomOf="@id/stepTwo" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/stepLineColor"
        app:layout_constraintBottom_toBottomOf="@id/stepOne"
        app:layout_constraintEnd_toStartOf="@id/stepTwo"
        app:layout_constraintStart_toEndOf="@id/stepOne"
        app:layout_constraintTop_toTopOf="@id/stepOne" />

    <!-- STEP 3 -->
    <TextView
        android:id="@+id/stepThree"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/step_current"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stepThreeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Obsada"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/stepThree"
        app:layout_constraintStart_toStartOf="@id/stepThree"
        app:layout_constraintTop_toBottomOf="@id/stepThree" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/stepLineColor"
        app:layout_constraintBottom_toBottomOf="@id/stepOne"
        app:layout_constraintEnd_toStartOf="@id/stepThree"
        app:layout_constraintStart_toEndOf="@id/stepTwo"
        app:layout_constraintTop_toTopOf="@id/stepOne" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>